<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity"
    android:id="@+id/body_container">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/modul2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/background_wave"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-57dp"
        tools:layout_editor_absoluteY="-2dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:elevation="2dp"
        app:menu="@menu/item_menu_navigation"
        android:background="@drawable/round_corner_navigation"
        app:itemRippleColor="@android:color/transparent"
        app:itemIconSize="25sp"
        app:itemIconTint="@drawable/item_selector_navigation"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body"
        android:layout_below="@id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>